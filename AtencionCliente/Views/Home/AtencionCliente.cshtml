@{
    ViewData["Title"] = "Atención cliente";
}

<h1>Atención al cliente</h1>


<hr />
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            
            <div class="modal-body">
                Primero
                <code>
                    DECLARE celular STRING;
                    DECLARE today Date;
                    IF EXISTS(SELECT * from ATENCION_CLIENTE where CELULAR = celular AND MOTIVO = 'Incidencia' or MOTIVO = 'Queja' or MOTIVO = 'Reclamación' and FECHA_ALTA = today)
                    BEGIN
                    SELECT 1
                    END
                    ELSE
                    BEGIN
                    SELECT 2
                    END
                </code>
                <br />
                <br />
                Segundo
                <code>INSERT INTO ATENCION_CLIENTE (NOMBRE, APELLIDOS, CELULAR, EMAIL, SEXO, MOTIVO, FECHA_ALTA) VALUES  (NOMBRE, APELLIDOS, CELULAR, EMAIL, SEXO, MOTIVO, FECHA_ALTA)</code>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
 

            <div class="form-group">
                <label class="control-label">Nombre:</label>
                <input class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Apellidos:</label>
                <input class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Teléfono cecular:</label>
                <input class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Email:</label>
                <input class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Sexo:</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                    <label class="form-check-label" for="flexRadioDefault1">
                        Hombre
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                    <label class="form-check-label" for="flexRadioDefault2">
                        Mujer
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Motivo:</label>
                <select class="form-select" aria-label="Default select example">
                    <option value="1">Incidencia</option>
                    <option value="2">Queja</option>
                    <option value="3">Reclamación</option>
                    <option value="4">Sugerencia</option>
                </select>
            </div>
            
            <button type="button" class="btn btn-primary mt-2" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Enviar
            </button>

        </form>
    </div>
</div>

<div>
    <a asp-area="" asp-controller="Home" asp-action="Listado">Listado</a>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }



